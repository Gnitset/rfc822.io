server {
	listen 443 ssl default_server;
	listen [::]:443 ssl default_server;
	ssl_certificate /var/lib/dehydrated/certs/{{ ansible_fqdn }}/fullchain.pem;
	ssl_certificate_key /var/lib/dehydrated/certs/{{ ansible_fqdn }}/privkey.pem;

	server_name _;

	location / {
		proxy_pass http://127.0.0.1:8000;
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_set_header X-Forwarded-Proto https;
	}
}
